
<%- include ../partials/nav -%>
<%- include ../partials/heading -%>

  <!-- Main Content -->
  <main class="container-login">
    <div class="row">

        <br>
        <br>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="bg-active">
                    <th class="text-center">Name</th>
                    <th class="text-center">Phone Number</th>
                    <th class="text-center">Address</th>
                    <th class="text-center" colspan="3"></th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let i = 0; i < ContactsList.length; i++) { %>
                    <tr>
                        <td class="align-middle text-center"><%= ContactsList[i].firstName %> <%= ContactsList[i].lastName %></td>
                        <td class="align-middle text-center"><%= ContactsList[i].phoneNumber %></td>
                        <td class="align-middle text-center"><%= ContactsList[i].email %></td>                    
                        
                        <td class="align-middle text-center">
                            <a href="/users/update/<%= ContactsList[i]._id %>" class="btn btn-primary btn-xs" style='font-size:14px'>
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>

                        <td class="align-middle text-center">
                            <a href="/users/delete/<%= ContactsList[i]._id %>" class="btn btn-danger btn-xs" style='font-size:14px'>
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
  <%- include ../partials/footer -%>